# =============================================================================
# FutureOracle Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp config/.env.example config/.env

# =============================================================================
# xAI Grok API Configuration
# =============================================================================
# Get your API key from: https://x.ai/api
XAI_API_KEY=your_xai_api_key_here
XAI_API_BASE=https://api.x.ai/v1
XAI_MODEL=grok-beta  # or grok-4 when available

# =============================================================================
# Finnhub API Configuration
# =============================================================================
# Get your API key from: https://finnhub.io/
# Free tier: 60 API calls/minute
FINNHUB_API_KEY=your_finnhub_api_key_here

# =============================================================================
# News & Data Sources
# =============================================================================
# NewsAPI (Free tier: 100 requests/day)
# Get key from: https://newsapi.org/
NEWSAPI_KEY=your_newsapi_key_here

# RSS Feeds (comma-separated URLs)
RSS_FEEDS=https://feeds.bloomberg.com/markets/news.rss,https://www.ft.com/rss/companies

# X/Twitter API (Optional - for semantic search)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Reddit API (PRAW)
# Create app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=FutureOracle/1.0

# =============================================================================
# Notifications
# =============================================================================
# Discord Webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_HERE

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here  # Use app-specific password for Gmail
SMTP_RECIPIENT=your_email@gmail.com

# =============================================================================
# Portfolio & Broker Integration
# =============================================================================
# Paper Trading Mode (set to true for simulation)
PAPER_TRADING=true

# Broker API (Optional - for live portfolio tracking)
BROKER_TYPE=alpaca  # Options: alpaca, degiro, interactive_brokers
BROKER_API_KEY=your_broker_api_key
BROKER_SECRET_KEY=your_broker_secret_key
BROKER_BASE_URL=https://paper-api.alpaca.markets  # Use paper trading URL for testing

# =============================================================================
# Database
# =============================================================================
DATABASE_PATH=data/futureoracle.db

# =============================================================================
# Scheduling & Execution
# =============================================================================
# Timezone for cron jobs
TIMEZONE=Europe/Amsterdam

# Daily run time (24h format)
DAILY_RUN_HOUR=9
DAILY_RUN_MINUTE=0

# Weekly report day (0=Sunday, 6=Saturday)
WEEKLY_REPORT_DAY=0
WEEKLY_REPORT_HOUR=20

# =============================================================================
# Agent Configuration
# =============================================================================
# Agent execution timeout (seconds)
AGENT_TIMEOUT=300

# Max retries for failed API calls
MAX_RETRIES=3

# Enable verbose logging
VERBOSE_LOGGING=true

# =============================================================================
# Dashboard
# =============================================================================
STREAMLIT_PORT=8501
STREAMLIT_THEME=dark

# =============================================================================
# Advanced Settings
# =============================================================================
# Cache TTL (seconds)
CACHE_TTL=3600

# Rate limiting (requests per minute)
RATE_LIMIT=60

# Enable experimental features
EXPERIMENTAL_FEATURES=false
